<h2>SIGN UP</h2>

<div class="container">
  <form action= "/auth/signup" method="POST">
      <div class="form-group row">
      <label class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10 col-md-4">
        <input type="text" class="form-control" name="name" placeholder="E.g. Jane">
      </div>
    </div>
     <div class="form-group row">
      <label class="col-sm-2 col-form-label">Birth Year</label>
      <div class="col-sm-10 col-md-4">
        <input type="text" class="form-control" name="birthyear" placeholder="E.g. 1997">
      </div>
    </div>
     <div class="form-group row">
      <label class="col-sm-2 col-form-label">Location</label>
      <div class="col-sm-10 col-md-4">
        <input type="text" class="form-control" name="location" placeholder="E.g. 98119">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10 col-md-4">
        <input type="text" class="form-control" name="email" placeholder="E.g. jane@email.com">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-10 col-md-4">
        <input type="password" class="form-control" name="password" placeholder="E.g. MyPassword">
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn">Sign Up</button>
      </div>
    </div>
  </form>
</div>