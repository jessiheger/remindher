      <div class="modal-header">
        <h5 class="modal-title" id="hpvModalLabel">HPV vaccine</h5>
      </div>
      <div class="modal-body">


		<form id="hpv">
			<div class="form-group row">
			    <label class="col-sm-4 col-form-label">Shot #1</label>
				    <div class="col-sm-4">
				      <input type="date" class="form-control" placeholder="DD/MM/YY" name="shot1_date">
				    </div>
				     <div class="col-sm-4 offset-sm-4 form-group row">
    					<label><input type="checkbox"> Completed?</label>
  					</div>
			</div>
			<div class="form-group row">
			    <label class="col-sm-4 col-form-label">Shot #2</label>
				    <div class="col-sm-4">
				      <input type="date" class="form-control" placeholder="DD/MM/YY" name="shot2_date">
				    </div>
				    <div class="col-sm-4 offset-sm-4 form-group row">
    					<label><input type="checkbox"> Completed?</label>
  					</div>
			</div>
			<div class="form-group row">
			    <label class="col-sm-4 col-form-label">Shot #3</label>
